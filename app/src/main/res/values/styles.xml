<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColor">@color/md_grey_900</item>

        <!--Preferenceサマリの色-->
        <item name="android:textColorSecondary">@color/md_grey_600</item>

        <!--Preferenceサマリの変更時の色-->
        <item name="textPreferenceChangedColor">#0000aa</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

    </style>

    <style name="ProgressBarTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorAccent">@color/md_amber_400</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <attr name="textPreferenceChangedColor" format="color" />

</resources>
