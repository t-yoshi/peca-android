<resources>

    <style name="AppActionBarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="titleTextColor">@color/md_white_1000</item>
        <item name="subtitleTextColor">@color/md_white_1000</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">

        <item name="colorPrimary">@color/md_grey_900</item>
        <item name="colorPrimaryDark">@color/md_black_1000</item>
        <item name="actionBarTheme">@style/AppActionBarTheme</item>

        <item name="android:textColor">@color/md_grey_900</item>

        <!--Preferenceサマリの色-->
        <item name="android:textColorSecondary">@color/md_grey_600</item>

        <!--Preferenceサマリの変更時の色-->
        <item name="textPreferenceChangedColor">#0000aa</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

    </style>

    <attr name="textPreferenceChangedColor" format="color"/>

</resources>
